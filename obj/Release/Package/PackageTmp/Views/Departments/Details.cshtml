@model StudentManagement.Models.Department

@{
    ViewBag.Title = "Chi tiết";
}

<h2>Chi tiết</h2>

<div>
    <h4>Khối</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã Khối
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentCode)
        </dd>

        <dt>
            Tên Khối
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa thông tin", "Edit", new { id = Model.DepartmentId })
    <div class="mt-3">
        @Html.ActionLink("Về trang chủ", "Index")
    </div>
</p>
