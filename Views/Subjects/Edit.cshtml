@model StudentManagement.Models.Subject

@{
   ViewBag.Title = "Chỉnh sửa";
}

<h2>Cập nhật thông tin môn học</h2>

@using (Html.BeginForm())
{
   @Html.AntiForgeryToken()
   
   <div class="form-horizontal">
       <h4>Môn học</h4>
       <hr />
       @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       @Html.HiddenFor(model => model.SubjectId)

       <div class="form-group">
           <div class="col-md-2">Mã môn học</div>
           <div class="col-md-10">
               @Html.EditorFor(model => model.SubjectCode, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.SubjectCode, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-2">Tên môn học</div>
           <div class="col-md-10">
               @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-2">Thời lượng</div>
           <div class="col-md-10">
               @Html.EditorFor(model => model.Credit, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.Credit, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-2">Khối</div>
           <div class="col-md-10">
               @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
               @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-2">Mô tả</div>
           <div class="col-md-10">
               @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-offset-2 col-md-10">
               <input type="submit" value="Lưu" class="btn btn-default" />
           </div>
       </div>
   </div>
}

<div>
   @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
   @Scripts.Render("~/bundles/jqueryval")
}
