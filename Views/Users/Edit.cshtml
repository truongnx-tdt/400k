@model StudentManagement.Models.User

@{
    ViewBag.Title = "Chỉnh Sửa";
}

<div class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm">
            <li>
                <a href="/Home/Statistics" class="text-gray-500 hover:text-gray-700 transition-colors duration-200">
                    <i class="fas fa-home mr-1"></i>Trang chủ
                </a>
            </li>
            <li class="flex items-center space-x-2">
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <a href="@Url.Action("Index")" class="text-gray-500 hover:text-gray-700 transition-colors duration-200">
                    Danh sách người dùng
                </a>
            </li>
            <li class="flex items-center space-x-2">
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="text-gray-700 font-medium">Chỉnh sửa người dùng <span class="text-red-600"> @Model.Username</span></span>
            </li>
        </ol>
    </nav>

    <!-- Header Section -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800">CHỈNH SỬA NGƯỜI DÙNG <span class="text-red-600"> @Model.Username</span></h2>
        <p class="text-gray-600 mt-1">Cập nhật thông tin người dùng trong hệ thống</p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="bg-white rounded-lg shadow-lg p-6">
            @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })
            @Html.HiddenFor(model => model.UserId)

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div>
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-red-500 text-sm mt-1" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-red-500 text-sm mt-1" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-red-500 text-sm mt-1" })
                    </div>
                </div>

                <div class="space-y-4">
                    <div>
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-red-500 text-sm mt-1" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.RoleId, "Vai Trò", htmlAttributes: new { @class = "block text-sm font-medium text-gray-700 mb-1" })
                        @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" })
                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-red-500 text-sm mt-1" })
                    </div>
                </div>
            </div>

            <div class="mt-6 flex items-center justify-end space-x-3">
                <a href="@Url.Action("Index")" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-arrow-left mr-2"></i>Quay lại
                </a>
                <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-save mr-2"></i>Lưu thay đổi
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
