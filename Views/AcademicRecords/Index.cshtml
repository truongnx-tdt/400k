@model IEnumerable<StudentManagement.Models.AcademicRecord>

@{
    ViewBag.Title = "Index";
    var studentID = ViewBag.StudentId;
    var studentName = ViewBag.StudentName;;
}

<style>
    .table th {
        white-space: nowrap;
    }
    .badge {
        font-size: 0.9em;
        padding: 0.5em 0.8em;
    }
    .card {
        border-radius: 0.5rem;
    }
    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }
</style>

<div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="@Url.Action("Index", "Home")" class="text-gray-700 hover:text-blue-600">
                    Trang chủ
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <a href="@Url.Action("Index", "Students")" class="ml-1 text-gray-700 hover:text-blue-600 md:ml-2">Danh sách học sinh</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-1 text-gray-500 md:ml-2">Điểm học sinh @studentName</span>
                </div>
            </li>
        </ol>
    </nav>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-blue-600 px-6 py-4">
            <h2 class="text-xl font-semibold text-white">BẢNG ĐIỂM HỌC SINH</h2>
        </div>
        <div class="p-6">
            @if (Session["Role"].Equals("Admin"))
            {
                <div class="mb-4">
                    <a href="@Url.Action("AddResult", "AcademicRecords", new { studentId = studentID })" 
                       class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Thêm kết quả mới
                    </a>
                </div>
            }

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="hidden">Lớp</th>
                            <th class="hidden">Họ và tên</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã môn học</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Học kỳ</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Năm học</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Điểm giữa kỳ</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Điểm cuối kỳ</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Điểm thành phần</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Điểm trung bình</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Xếp loại</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="hidden">@Html.DisplayFor(modelItem => item.Class.ClassName)</td>
                                <td class="hidden">@Html.DisplayFor(modelItem => item.Student.FullName)</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@Html.DisplayFor(modelItem => item.Subject.SubjectCode)</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@Html.DisplayFor(modelItem => item.Semester)</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@Html.DisplayFor(modelItem => item.Year)</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                        @Html.DisplayFor(modelItem => item.MidtermScore)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                        @Html.DisplayFor(modelItem => item.FinalScore)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                        @Html.DisplayFor(modelItem => item.ComponentScore)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var totalScore = item.TotalScore;
                                        var scoreColor = totalScore >= 8.5 ? "bg-green-100 text-green-800" :
                                                       totalScore >= 7.0 ? "bg-blue-100 text-blue-800" :
                                                       totalScore >= 5.5 ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800";
                                    }
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @scoreColor">
                                        @Html.DisplayFor(modelItem => item.TotalScore)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var gradeColor = item.LetterGrade == "A" ? "bg-green-100 text-green-800" :
                                                       item.LetterGrade == "B" ? "bg-blue-100 text-blue-800" :
                                                       item.LetterGrade == "C" ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800";
                                    }
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @gradeColor">
                                        @Html.DisplayFor(modelItem => item.LetterGrade)
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-6">
        <a href="@Url.Action("Index", "Students")" 
           class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Về trang chủ
        </a>
    </div>
</div>
