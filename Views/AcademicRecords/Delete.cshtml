@model StudentManagement.Models.AcademicRecord

@{
    ViewBag.Title = "Xóa";
}

<h2>XÓA</h2>

<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4>Hồ sơ học tập</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Lớp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Class.ClassName)
        </dd>

        <dt>
            Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>

        <dt>
            Mã môn học
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject.SubjectCode)
        </dd>

        <dt>
            Học kỳ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Semester)
        </dd>

        <dt>
            Năm học
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            Điểm giữa kỳ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MidtermScore)
        </dd>

        <dt>
            Điểm cuối kỳ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FinalScore)
        </dd>

        <dt>
            Điểm thành phần
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ComponentScore)
        </dd>

        <dt>
            Điểm trung bình
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalScore)
        </dd>

        <dt>
            Xếp loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LetterGrade)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại danh sách", "StudentGrades", "AcademicRecords", new { studentId = Model.StudentId }, null)
        </div>
    }
</div>
