@model StudentManagement.Models.AcademicRecord

@{
    ViewBag.Title = "Create";
    var studentName = ViewBag.StudentName;
    var studentID = ViewBag.StudentId;
}

<div class="container py-4">
<nav class="flex mb-6" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
            <a href="@Url.Action("Index", "Home")" class="text-gray-700 hover:text-blue-600">
                Trang chủ
            </a>
        </li>
        <li>
            <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <a href="@Url.Action("StudentGrades", "AcademicRecords", new { studentId = studentID })" class="ml-1 text-gray-700 hover:text-blue-600 md:ml-2">Bảng điểm</a>
            </div>
        </li>
        <li aria-current="page">
            <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="ml-1 text-gray-500 md:ml-2">Thêm điểm số @studentName</span>
            </div>
        </li>
    </ol>
</nav>
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i>THÊM MỚI KẾT QUẢ HỌC TẬP</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-user me-2"></i>Mã học sinh
                                </label>
                                <div>
                                    @Html.TextBoxFor(model => model.StudentId, new { @class = "form-control", @disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-book me-2"></i>Mã môn học
                                </label>
                                <div>
                                    @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-chalkboard me-2"></i>Mã lớp học
                                </label>
                                <div>
                                    @Html.DropDownList("ClassId", null, htmlAttributes: new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.ClassId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-calendar-alt me-2"></i>Học kỳ
                                </label>
                                <div>
                                    @Html.DropDownListFor(model => model.Semester, new SelectList(new List<int> { 1, 2, 3, 4 }), new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-calendar me-2"></i>Năm học
                                </label>
                                <div>
                                    @Html.DropDownListFor(model => model.Year, new SelectList(Enumerable.Range(2000, DateTime.Now.Year - 1999)), new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <h4 class="mb-3"><i class="fas fa-chart-line me-2"></i>Thông tin điểm số</h4>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-star me-2"></i>Điểm giữa kỳ
                                </label>
                                <div>
                                    @Html.EditorFor(model => model.MidtermScore, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MidtermScore, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-star me-2"></i>Điểm cuối kỳ
                                </label>
                                <div>
                                    @Html.EditorFor(model => model.FinalScore, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FinalScore, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-star me-2"></i>Điểm thành phần
                                </label>
                                <div>
                                    @Html.EditorFor(model => model.ComponentScore, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ComponentScore, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-calculator me-2"></i>Điểm trung bình
                                </label>
                                <div>
                                    @Html.EditorFor(model => model.TotalScore, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TotalScore, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group">
                                <label class="control-label fw-bold">
                                    <i class="fas fa-graduation-cap me-2"></i>Xếp loại
                                </label>
                                <div>
                                    @Html.EditorFor(model => model.LetterGrade, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LetterGrade, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Xác nhận
                            </button>
                            @Html.ActionLink("Quay lại bảng điểm", "StudentGrades", "AcademicRecords", new { studentId = Model.StudentId }, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
