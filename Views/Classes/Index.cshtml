@model IEnumerable<StudentManagement.Models.Class>

@{
    ViewBag.Title = "Danh sách lớp học";
}

<h2>Danh sách lớp học</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Khối:
        </th>
        <th>
            Tên Lớp:
        </th>
        <th>
            Năm Học:
        </th>
        <th>
            Giáo Viên Chủ Nhiệm:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AcademicYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeroomTeacher)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ClassId }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ClassId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ClassId })
        </td>
    </tr>
}

</table>
