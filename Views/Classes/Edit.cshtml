@model StudentManagement.Models.Class

@{
   ViewBag.Title = "Chỉnh sửa lớp học";
}

<h2>CHỈNH SỬA</h2>

@using (Html.BeginForm())
{
   @Html.AntiForgeryToken()
   
   <div class="form-horizontal">
       <h4>LỚP</h4>
       <hr />
       @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       @Html.HiddenFor(model => model.ClassId)

       <div class="form-group">
           <div class="col-md-2 control-label">Tên lớp</div>
           <div class="col-md-10">
               @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-2 control-label">Khối</div>
           <div class="col-md-10">
               @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
               @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-2 control-label">Năm học</div>
           <div class="col-md-10">
               @Html.EditorFor(model => model.AcademicYear, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.AcademicYear, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-2 control-label">Giáo viên chủ nhiệm</div>
           <div class="col-md-10">
               @Html.EditorFor(model => model.HomeroomTeacher, new { htmlAttributes = new { @class = "form-control" } })
               @Html.ValidationMessageFor(model => model.HomeroomTeacher, "", new { @class = "text-danger" })
           </div>
       </div>

       <div class="form-group">
           <div class="col-md-offset-2 col-md-10">
               <input type="submit" value="Lưu" class="btn btn-default" />
           </div>
       </div>
   </div>
}

<div>
   @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
   @Scripts.Render("~/bundles/jqueryval")
}
