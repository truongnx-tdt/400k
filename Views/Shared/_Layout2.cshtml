<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý điểm học sing</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-gray-100">
    <nav class="bg-gray-800 text-white p-4 hidden">
        <div class="container mx-auto">
            @Html.ActionLink("QUẢN LÝ HỌC SINH", "Index", "Students", new { area = "" }, new { @class = "text-xl font-bold" })
            <button type="button" class="md:hidden" aria-label="Toggle navigation">
                <span class="block w-6 h-1 bg-white mb-1"></span>
                <span class="block w-6 h-1 bg-white mb-1"></span>
                <span class="block w-6 h-1 bg-white"></span>
            </button>
            <div class="hidden md:flex justify-between">
                <ul class="flex space-x-4">
                    <li>@Html.ActionLink("Học sinh", "Index", "Students", new { area = "" }, new { @class = "hover:text-gray-300" })</li>
                    <li>@Html.ActionLink("Khối", "Index", "Departments", new { area = "" }, new { @class = "hover:text-gray-300" })</li>
                    <li>@Html.ActionLink("Lớp", "Index", "Classes", new { area = "" }, new { @class = "hover:text-gray-300" })</li>
                    <li>@Html.ActionLink("Môn học", "Index", "Subjects", new { area = "" }, new { @class = "hover:text-gray-300" })</li>
                    <li>@Html.ActionLink("Thống kê", "Statistics", "Home", new { area = "" }, new { @class = "hover:text-gray-300" })</li>
                    <li>@Html.ActionLink("Đăng xuất", "Logout", "Account", new { area = "" }, new { @class = "hover:text-gray-300" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mx-auto p-4">
        @RenderBody()
        <footer class="hidden">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
